{
  "name": "vulcan",
  "version": "1.0.0",
  "description": "A real-time voice agent framework",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./services": {
      "types": "./dist/services/index.d.ts",
      "import": "./dist/services/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "start": "tsx examples/voice-agent.ts",
    "dev": "tsx watch examples/voice-agent.ts",
    "prepublishOnly": "npm run build",
    "link": "npm run build && npm link",
    "example": "npm run build && tsx examples/voice-agent.ts"
  },
  "keywords": [
    "voice",
    "agent",
    "ai",
    "speech",
    "openai",
    "deepgram"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@cartesia/cartesia-js": "^1.3.0",
    "@deepgram/sdk": "^3.0.0",
    "dotenv": "^16.0.3",
    "node-microphone": "^0.1.6",
    "openai": "^4.0.0",
    "play-sound": "^1.1.6",
    "sox-stream": "^2.0.6",
    "speaker": "^0.5.4"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.0.0"
  }
}
