{
  "name": "vulcan",
  "version": "1.0.0",
  "description": "A real-time voice agent framework with support for text and voice interactions",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test && npm run lint",
    "preversion": "npm run lint",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "start:voice": "tsx examples/voice-agent.ts",
    "start:text": "tsx examples/text-chat.ts",
    "start:web": "npx http-server examples -o web-tts.html",
    "dev:voice": "tsx watch examples/voice-agent.ts",
    "dev:text": "tsx watch examples/text-chat.ts",
    "example:voice": "tsx examples/voice-agent.ts",
    "example:text": "tsx examples/text-chat.ts"
  },
  "keywords": [
    "voice",
    "agent",
    "ai",
    "speech",
    "chat",
    "llm",
    "openai",
    "deepgram",
    "cartesia",
    "text-to-speech",
    "speech-to-text"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@cartesia/cartesia-js": "^1.3.0",
    "@deepgram/sdk": "^3.0.0",
    "dotenv": "^16.0.3",
    "node-microphone": "^0.1.6",
    "openai": "^4.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.0.0"
  },
  "optionalDependencies": {
    "play-sound": "^1.1.6",
    "sox-stream": "^2.0.6",
    "speaker": "^0.5.4"
  }
}
